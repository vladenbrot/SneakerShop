@model CreateClientViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Register</h1>
</div>

<form asp-controller="Client" asp-action="Create" method="post">
    <label>First Name</label>
    <input class="form-control" type="text" name="first name" />
    <label>Third Name</label>
    <input class="form-control" type="text" name="third name" />
    <label>Telephone</label>
    <input class="form-control" type="tel" name="telephone" />
    <label>Email</label>
    <input class="form-control" type="email" name="email" />
    <label>Gender</label>
    <input class="form-control" type="text" name="gender" />
    <div class="text-right mt-3">
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-secondary" asp-action="Client">Cancel</a>
    </div>
</form>